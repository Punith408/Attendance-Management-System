                    <h2>Attendance</h2>
            <br>    
            <!-- <form action="/" method="POST"> -->
            <form id ="attendance">
                <table class="table">
                    <thread class="thread-dark">
                        <tr>
                            <th>Sl. No</th>
                            <th>USN</th>
                            <th>NAME</th>
                            <th>Mark Attendance<br>
                                <input type="checkbox" onClick="toggle(this)">
                                <!-- <input type="checkbox" onClick="toggle(this)"> -->
                            </th>
                            <th>Attendance status</th>
                        </tr>
                    </thread>
                    <tbody>
                        <% for(var i=0;i<users.length;i++){%>
                            <tr>
                                <td><%=i+1%></td>
                                <td><%=users[i].usn%></td>
                                <td><%=users[i].name%></td>
                                <td>
                                    <!-- <a class="btn-border-shadow delete" data-id=<%=users[i]._id%>>
                                        <span class="text-gradient"><i class="fas fa-times"></i></span>
                                    </a> -->
                                    <form>
                                    <input type="checkbox" name = "Att" value="present">
                                    <input type="hidden" name="id" id="id" value="<%=users[i]._id%>">
                                    <input type="hidden" name="present" id="present" value="<%=users[i].present%>">
                                    <input type="hidden" name="v" id="v" value="<%=users[i].__v%>">
                                    <!-- <input type="checkbox" name = "Att" value="absent" onclick="return validateAtt();"> -->
                                    </form>

                                </td>
                                <td><%=users[i].present%>/<%=users[i].__v%></td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </form>
        </div>
        <button  type="button" class="form-submit-button " onclick="return validateAtt();">Submit</button>
